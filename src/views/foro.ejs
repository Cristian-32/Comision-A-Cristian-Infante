<%- include('partials/header.ejs') -%>
<main class="d-flex flex-column align-items-center" id="main">
      
    <button type="button" class="btn btn-primary" id="btn-crear">Crear Publicación</button>

    <div class="container text-center">
      <div class="row" id="contenedor-row" >
      </div>
    </div>

    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Nueva Publicación</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="formulario">
              <div class="mb-3">
                <label for="titulo" class="col-form-label">Título</label>
                <input type="text" class="form-control" id="titulo">
              </div>
              <div class="mb-3">
                <label for="publicacion" class="col-form-label">Publicación</label>
                <textarea class="form-control" id="publicacion"></textarea>
              </div>
              <div class="mb-3">
                <label for="imagen-url" class="col-form-label">Imagen-Url</label>
                <input type="url" class="form-control" id="imagen-url">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn" id="btn-cerrar" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn" id="btn-subir-publicacion">Publicar</button>
              </div>
            </form>
          </div>        
        </div>
      </div>
    </div>
  </main>
<%- include('partials/footer.ejs') -%>
